<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pembersih_item"
    android:layout_marginBottom="12dp"
    android:elevation="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pembersih"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/iv_pembersih"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_nama_pembersih"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nama Pembersih"
        android:textColor="@color/grey_primary"
        android:fontFamily="@font/sogoe_ui"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/cv_pembersih"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ib_trash"
        />
    <TextView
        android:id="@+id/tv_jumlah_pembersih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textColor="@color/grey_medium"
        android:fontFamily="@font/sogoe_ui"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/cv_pembersih"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_pembersih"
        />
    <TextView
        android:id="@+id/tv_orang_pembersih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="orang"
        android:textColor="@color/grey_medium"
        android:fontFamily="@font/sogoe_ui"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_jumlah_pembersih"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_pembersih"
        />
    <ImageButton
        android:id="@+id/ib_trash"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="6dp"
        android:layout_marginRight="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_btn_trash"
        android:elevation="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_icon_awesome_trash_alt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_goneMarginRight="20dp"
        />
    <ImageButton
        android:id="@+id/ib_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="6dp"
        android:layout_marginRight="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_btn_edit"
        android:elevation="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_icon_awesome_edit"
        app:layout_constraintEnd_toStartOf="@id/ib_trash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_goneMarginRight="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>