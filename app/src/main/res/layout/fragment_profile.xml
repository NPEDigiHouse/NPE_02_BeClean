<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:background="@drawable/bg"
    tools:context=".Fragments.ProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Profile"
            android:textSize="22dp"
            android:fontFamily="@font/sogoe_ui"
            android:textStyle="bold"
            android:textColor="@color/grey_primary"
            app:layout_constraintTop_toTopOf="@id/iv_title_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_title_profile"
            />
        <ImageView
            android:id="@+id/iv_title_profile"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:src="@drawable/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_photo_profile_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:src="@drawable/example_face"
            android:scaleType="centerCrop"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/green_primary"
            android:tint="@color/grey_primary"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_title_profile"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/civ_photo_profile_profile"
            app:layout_constraintStart_toEndOf="@id/civ_photo_profile_profile"
            android:text="Hi,"
            android:fontFamily="@font/sogoe_ui"
            android:textStyle="bold"
            android:textColor="@color/grey_primary"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_hello"
            app:layout_constraintBottom_toBottomOf="@id/tv_hello"
            app:layout_constraintStart_toEndOf="@id/tv_hello"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/sogoe_ui"
            tools:text="Nissa"
            android:textStyle="bold"
            android:textColor="@color/grey_primary"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silver Member"
            app:layout_constraintTop_toBottomOf="@id/tv_name_profile"
            app:layout_constraintStart_toStartOf="@id/tv_hello"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/civ_photo_profile_profile"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_primary"
            android:text="Edit Profile"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:textColor="@color/blue_primary"
            android:fontFamily="@font/sogoe_ui"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="9dp"
            />
        <TableLayout
            android:id="@+id/tl_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="9dp"
            android:stretchColumns="0,1,2"
            android:paddingHorizontal="20dp"
            android:paddingVertical="40dp"
            android:background="@drawable/bg_primary"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tr_info_akun"
                >
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_user_guard"
                    />
                <TextView
                    android:id="@+id/tv_info_akun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Informasi Akun"
                    android:textSize="14sp"
                    />
                <Space android:layout_width="50dp"
                    android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_nexy"
                        />
            </TableRow>
            <View
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/grey_medium"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tr_info_bahasa"
                >
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_translation"
                    />
                <TextView
                    android:id="@+id/tv_info_bahasa"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Bahasa"
                    android:textSize="14sp"
                    />
                <Space android:layout_width="50dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_nexy"
                    />
            </TableRow>
            <View
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/grey_medium"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tr_info_kebijakan"
                >
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_security"
                    />
                <TextView
                    android:id="@+id/tv_info_kebijakan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Kebijakan"
                    android:textSize="14sp"
                    />
                <Space android:layout_width="50dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_nexy"
                    />
            </TableRow>
            <View
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/grey_medium"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tr_info_syarat"
                >
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_user_guard"
                    />
                <TextView
                    android:id="@+id/tv_info_syarat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Syarat dan Ketentuan"
                    android:textSize="14sp"
                    />
                <Space android:layout_width="50dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_nexy"
                    />
            </TableRow>
            <View
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/grey_medium"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tr_info_penilaian"
                >
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_star"
                    />
                <TextView
                    android:id="@+id/tv_info_penilaian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Penilaian BeClean"
                    android:textSize="14sp"
                    />
                <Space android:layout_width="50dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_nexy"
                    />
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/tv_keluar_profile"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="9dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_paid"
            android:background="@drawable/bg_btn_rect_trans"
            android:text="Keluar"
            android:textColor="@color/blue_primary"
            android:textSize="18dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>