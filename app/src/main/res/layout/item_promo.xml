<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_cleaner_pic"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/cleaner"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:layout_width="170dp"
                android:layout_height="145dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bg_ticket"/>
            <TextView
                android:id="@+id/tv_extra"
                android:layout_width="35dp"
                android:layout_height="18dp"
                android:textSize="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/ic_tick"
                android:text="EXTRA DISKON"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/percent_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/sogoe_ui"
                style="@style/ShadowText"
                android:textSize="37sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_extra"
                app:layout_constraintStart_toEndOf="@id/tv_extra"
                android:translationX="-4dp"
                android:translationY="8dp"
                />
            <TextView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:textStyle="bold"
                android:text="%"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_rect"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/tv_extra"
                app:layout_constraintStart_toEndOf="@id/percent_val"
                android:translationX="-6dp"
                android:translationY="-4dp"/>
            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruang Tamu"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/sogoe_ui"
                app:layout_constraintTop_toBottomOf="@id/tv_extra"
                app:layout_constraintStart_toStartOf="@id/tv_extra"
                android:layout_marginTop="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>