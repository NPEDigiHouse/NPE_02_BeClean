<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="0dp"
    android:fillViewport="true"
    tools:context=".Activities.EditProfileActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            >
            <ImageButton
                android:id="@+id/ib_back_edit_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/ic_icon_ionic_ios_arrow_dropleft_circle"
                android:layout_alignParentLeft="true"
                />
            <ImageView
                android:id="@+id/iv_title_profile"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:src="@drawable/title"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingVertical="50dp"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_primary"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Edit Profile Anda"
                android:fontFamily="@font/sogoe_ui"
                android:textStyle="bold"
                android:textColor="@color/blue_primary"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                style="@style/ShadowText"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/civ_photo_profile_edit_profile"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:civ_border_color="@color/blue_primary"
                    app:civ_border_width="1dp"
                    android:src="@drawable/ic_baseline_account_circle_24"
                    android:tint="@color/grey_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    />
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_photo_camera_24"
                    android:tint="@color/grey_primary"
                    android:background="@drawable/bg_btn_circle_white"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    app:layout_constraintEnd_toEndOf="@id/civ_photo_profile_edit_profile"
                    app:layout_constraintBottom_toBottomOf="@id/civ_photo_profile_edit_profile"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_nama"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/daftar_2_nma"
                app:boxBackgroundColor="@color/trans"
                app:boxStrokeColor="@color/grey_primary"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:hintTextColor="#AEAEAE">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_nama_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sogoe_ui"
                    android:background="@color/trans"
                    android:inputType="text"
                    android:textSize="15dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/daftar_3_alm"
                app:boxBackgroundColor="@color/trans"
                app:boxStrokeColor="@color/grey_primary"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:hintTextColor="#AEAEAE">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_alamat_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sogoe_ui"
                    android:background="@color/trans"
                    android:inputType="text"
                    android:textSize="15dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/daftar_4_ema"
                app:boxBackgroundColor="@color/trans"
                app:boxStrokeColor="@color/grey_primary"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:hintTextColor="#AEAEAE">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sogoe_ui"
                    android:background="@color/trans"
                    android:inputType="text"
                    android:textSize="15dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/daftar_5_pass"
                app:boxBackgroundColor="@color/trans"
                app:boxStrokeColor="@color/grey_primary"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                android:layout_gravity="center"
                app:hintTextColor="#AEAEAE">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sogoe_ui"
                    android:background="@color/trans"
                    android:inputType="text"
                    android:textSize="15dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_simpan_edit_profile"
                android:layout_gravity="center"
                android:minHeight="0dp"
                android:layout_width="180dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:background="@drawable/bg_btn_rect"
                android:elevation="1dp"
                android:shadowRadius="3"
                android:shadowDx="3"
                android:shadowColor="@color/grey_primary"
                android:fontFamily="@font/sogoe_ui"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:backgroundTint="@null"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>