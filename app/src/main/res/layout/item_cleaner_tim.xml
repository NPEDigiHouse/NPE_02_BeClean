<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="9dip"
        app:cardElevation="8dp"
        android:backgroundTint="#7FFFFFFF">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_cleaner"
                android:layout_width="140dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="110dp"
                android:layout_marginLeft="6dp"
                app:cardCornerRadius="7dp"
                >
                <ImageView
                    android:id="@+id/iv_image_item_cleaner_tim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cleaner"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_name_item_cleaner_tim"
                    android:layout_marginLeft="9dp"
                    app:layout_constraintStart_toEndOf="@id/cv_cleaner"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="Tim Gercep"
                    android:textStyle="bold"
                    android:textColor="@color/grey_primary"
                    />
            <TextView
                android:id="@+id/tv_orang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orang"
                android:textColor="@color/grey_primary"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_name_item_cleaner_tim"
                app:layout_constraintStart_toStartOf="@id/tv_name_item_cleaner_tim"/>
            <Button
                android:id="@+id/btn_order_item_cleaner_tim"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:minHeight="0dp"
                android:backgroundTint="@color/blue_primary"
                android:text="ORDER"
                android:layout_marginRight="6dp"
                android:textColor="@color/white"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_orang"

                />
            <ImageButton
                android:id="@+id/ib_minus_item_cleaner_tim"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="4dp"
                android:padding="4.5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_path_59"
                android:tint="@color/grey_primary"
                android:background="@drawable/bg_btn_circle_white"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="3dp"
                app:layout_constraintStart_toStartOf="@id/tv_name_item_cleaner_tim"
                app:layout_constraintTop_toBottomOf="@id/tv_orang"
                />
            <TextView
                android:id="@+id/tv_quantity_item_cleaner_tim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="@id/ib_minus_item_cleaner_tim"
                app:layout_constraintBottom_toBottomOf="@id/ib_minus_item_cleaner_tim"
                app:layout_constraintStart_toEndOf="@id/ib_minus_item_cleaner_tim"
                android:layout_marginLeft="2dp"
                android:text="1"
                />
            <ImageButton
                android:id="@+id/ib_plus_item_cleaner_tim"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_group_149"
                android:layout_marginTop="4dp"
                android:tint="@color/grey_primary"
                android:background="@drawable/bg_btn_circle_white"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="3dp"
                app:layout_constraintStart_toEndOf="@id/tv_quantity_item_cleaner_tim"
                android:layout_marginLeft="2dp"
                app:layout_constraintTop_toTopOf="@id/ib_minus_item_cleaner_tim"
                app:layout_constraintBottom_toBottomOf="@id/ib_minus_item_cleaner_tim"
                />
            <TextView
                android:id="@+id/tv_biaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biaya"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey_primary"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/ib_minus_item_cleaner_tim"
                app:layout_constraintStart_toStartOf="@id/tv_name_item_cleaner_tim"/>
            <TextView
                android:id="@+id/tv_cost_item_cleaner_tim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp. 120.0000"
                android:textStyle="bold"
                android:textColor="@color/grey_primary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_biaya"
                app:layout_constraintStart_toStartOf="@id/tv_name_item_cleaner_tim"/>
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rb_rate_item_cleaner_tim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                app:layout_constraintTop_toBottomOf="@id/tv_cost_item_cleaner_tim"
                app:layout_constraintStart_toStartOf="@id/tv_name_item_cleaner_tim"/>
            <LinearLayout
                android:id="@+id/ll_lihat_semua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rb_rate_item_cleaner_tim"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua"
                    android:textColor="@color/blue_primary"
                    android:textSize="11sp"
                    />
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_material_navigate_next"
                    app:tint="@color/blue_primary"
                    android:layout_marginLeft="4dp"/>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>