<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/ib_notif"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:onClick="back"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@id/tv_title_disc"
        app:layout_constraintBottom_toBottomOf="@id/tv_ayo"
        app:layout_constraintStart_toStartOf="parent"
        android:tint="@color/blue_primary"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_notifications_24"/>
    <TextView
        android:id="@+id/tv_title_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Discount Besar-besaran"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ib_notif"
        />
    <TextView
        android:id="@+id/tv_ayo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ayo buruan promo 20% untuk pemesanan pembersih sekarang juga"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/tv_title_disc"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        android:ellipsize="end"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toEndOf="@id/ib_notif"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        android:layout_marginRight="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:id="@+id/v_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ayo"
        android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>